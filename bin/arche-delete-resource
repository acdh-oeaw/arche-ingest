#!/bin/bash
BDIR=`dirname $0`
BDIR=`realpath "$BDIR"`

if [ -d "$BDIR/../acdh-oeaw/arche-ingest" ] ; then
    BDIR="$BDIR/../acdh-oeaw/arche-ingest"
else
    BDIR="$BDIR/.."
fi

if [ "$#" == "0" ] ; then
    php -f "$BDIR/delete_resource_sample.php" -- -h
else
    php -f "$BDIR/delete_resource_sample.php" -- $@
fi
